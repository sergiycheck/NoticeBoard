@using Microsoft.AspNetCore.Identity
@inject ICustomSignInManager SignInManager
@inject ICustomUserManager UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-controller="CustomAccount" asp-action="Logout" 
        asp-route-returnUrl="@Url.Action("Index", "Notification", new { area = "" })" method="POST">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="CustomAccount" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="CustomAccount" asp-action="Login">Login</a>
    </li>
}
</ul>